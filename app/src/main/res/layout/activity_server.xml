<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uk.co.akm.demo.bluetooth.bluetoothdemo.ServerActivity">

    <TextView
        android:id="@+id/server_server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name: TestServer" />

    <TextView
        android:id="@+id/server_server_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="UUID: 1234567890"/>

    <TextView
        android:id="@+id/server_request_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        tools:text="42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:text="Request" />

    <TextView
        android:id="@+id/server_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="from the client" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:text="Response"/>

    <TextView
        android:id="@+id/server_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="99" />
</LinearLayout>
